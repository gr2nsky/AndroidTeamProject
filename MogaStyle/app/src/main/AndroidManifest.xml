            </intent-filter>
        </activity>
        <activity android:name=".Activities.MyPage.MyPageMainActivity" />
        <activity android:name=".Activities.Hair.HairMainActivity" />
        <activity android:name=".Activities.Diary.DiaryMainActivity" />
        <activity android:name=".Activities.Consult.ConsultMainActivity" />
