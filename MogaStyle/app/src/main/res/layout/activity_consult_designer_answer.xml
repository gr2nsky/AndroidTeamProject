<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Consult.ConsultDesignerAnswerActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:background="#FDF3F6"
        android:layout_weight="0.2"
        android:layout_marginBottom="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Consult"
            android:textSize="40dp"
            android:textColor="@color/black"
            android:fontFamily="@font/bmjua_otf"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="120dp"/>

        <SearchView
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/img_consult_like"
            android:layout_width="30dp"
            android:layout_height="44dp"
            android:src="@drawable/like" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1.5"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="0.2"
            android:layout_marginTop="10dp"
            android:text="Hair Shop 디자이너 000님과 의견 나누기"
            android:textColor="@color/black"
            android:fontFamily="@font/bmjua_otf"
            android:textSize="22dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:background="#EAE6DF"
                android:text="000님 질문에 대한 답변입니다.
                          곱슬에 중단발기장이면 충분히 가능합니다."
                android:textSize="22dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/btn_super_positive"
                android:gravity="center"
                android:text="추가 질문하기" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="30dp"
                android:backgroundTint="@color/btn_super_positive"
                android:gravity="center"
                android:text="예약하기" />

        </LinearLayout>


    </LinearLayout>

    </LinearLayout>