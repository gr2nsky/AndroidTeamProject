<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.LoginActivity"
    android:background="@color/main_color">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="50dp"
        >
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/main_icon"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JOIN TO MOGASTYLING"
            android:fontFamily="@font/bmjua_otf"
            android:layout_marginTop="30dp"
            android:textSize="20dp"
            android:layout_marginBottom="20dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/btn_login_goMain"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="메인으로 가기 개발 종료후 삭제"
            android:fontFamily="@font/bmjua_otf"
            android:backgroundTint="@color/btn_positive"
            android:textColor="@color/black"
            android:layout_marginBottom="20dp"
            />

        <com.kakao.usermgmt.LoginButton
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"/>


        <com.google.android.gms.common.SignInButton
            android:id="@+id/btn_login_google_login"
            android:layout_width="300dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_login_another_way_login"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="@string/login_another_way"
            android:textStyle="italic"
            android:layout_marginTop="40dp"
            android:gravity="center"
            />

    </LinearLayout>

</LinearLayout>