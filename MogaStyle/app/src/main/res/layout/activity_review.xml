<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/shop_detail_ridious"
        android:layout_marginBottom="50dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_review_all_rating"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center|bottom"
                android:text="4.5"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:fontFamily="@font/bmjua_otf"/>
            <RatingBar
                android:id="@+id/rating_bar_review_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:progressTint="@color/btn_super_positive"
                android:layout_gravity="center"
                android:numStars="5"
                android:stepSize="0.5"
                android:isIndicator="false"
                style="@style/Widget.AppCompat.RatingBar"
                android:rating="3"/>
            <TextView
                android:id="@+id/tv_review_all_count"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center|top"
                android:text="100ê°œ"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:fontFamily="@font/bmjua_otf"/>
        </LinearLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_review_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3" />

</LinearLayout>