<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.Consult.ConsultTalkActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:background="#FDF3F6"
        android:layout_weight="0.2"
        android:layout_marginBottom="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Consult"
            android:textSize="40dp"
            android:textColor="@color/black"
            android:fontFamily="@font/bmjua_otf"
            android:layout_marginTop="10dp"
            android:layout_marginRight="140dp"/>

        <SearchView
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/img_consult_like"
            android:layout_width="30dp"
            android:layout_height="44dp"
            android:src="@drawable/like" />


    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1.5"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:text="Hair Shop 디자이너 000님과 의견 나누기"
            android:textColor="@color/black"
            android:fontFamily="@font/bmjua_otf"
            android:textSize="22dp"
            android:layout_marginLeft="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_consult_designer_talk_img"
                android:layout_width="103dp"
                android:layout_height="97dp"
                android:layout_margin="10dp"
                android:src="@drawable/jpeg_default_profile_photo" />

            <TextView
                android:layout_width="254dp"
                android:layout_height="96dp"
                android:layout_marginTop="10dp"
                android:background="#EAE6DF"
                android:text="사전정보는 잘 받았습니다.
                원하시는 디자인의 디테일을
                설명해주시면 답변드리겠습니다."
                android:textSize="18dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:orientation="vertical"
            android:layout_weight="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/bmjua_otf"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:text="원하시는 스타일에 대해 자유롭게 질문해주세요."
                android:textSize="20dp"
                />


            <TextView
                android:layout_width="362dp"
                android:layout_height="96dp"
                android:layout_margin="12dp"
                android:background="#EAE6DF"
                android:text="레게머리가 하고싶습니다. 기장은 어깨선까지 내려오는 중단발이고 곱슬입니다. 언제 스타일링 가능할까요?? "
                android:textSize="18dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="120dp"
                    android:backgroundTint="@color/btn_super_positive"
                    android:gravity="center"
                    android:text="이미지 올리기" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:backgroundTint="@color/btn_super_positive"
                    android:gravity="center"
                    android:text="등록하기" />

            </LinearLayout>


        </LinearLayout>




    </LinearLayout>

</LinearLayout>