<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    >

    <ImageView
        android:id="@+id/iv_designer_list_image"
        android:layout_width="0px"
        android:layout_height="120dp"
        android:layout_weight="1.5"
        android:scaleType="fitXY"
        android:layout_margin="10dp"
        />

    <LinearLayout
        android:layout_width="0px"
        android:layout_height="130dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/tv_designer_list_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/bmjua_otf"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="15dp"
            />

        <TextView
            android:id="@+id/tv_designer_list_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/bmjua_otf"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="15dp"
            />

        <TextView
            android:id="@+id/tv_designer_list_introduction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/bmjua_otf"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="15dp"
            />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0px"
        android:layout_height="130dp"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/imaBtn_designer_reservation"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@drawable/background_rounded_corners_white"
            android:backgroundTint="#E5D2AB"
            android:src="@drawable/ic_baseline_calendar_today_24"
            android:scaleType="fitCenter"
            android:padding="15dp"
            />

        <TextView
            android:id="@+id/tv_designer_reservation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="예약하기"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            android:fontFamily="@font/bmjua_otf"
            />

    </LinearLayout>

</LinearLayout>