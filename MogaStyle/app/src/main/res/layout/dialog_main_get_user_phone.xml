<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="40px"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/phoneDialog"
            android:fontFamily="@font/bmjua_otf"
            android:textSize="30dp"
            android:layout_marginBottom="20dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="취소시 앱이 꺼집니다!"
            android:fontFamily="@font/bmjua_otf"
            android:textSize="20dp"
            android:layout_marginBottom="20dp"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="15dp"
        >
        <EditText
            android:id="@+id/et_main_get_user_phone"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="핸드폰 번호 입력!"
            android:fontFamily="@font/bmjua_otf"
            android:layout_marginRight="20dp"

            />
        <Button
            android:id="@+id/btn_main_get_user_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bmjua_otf"
            android:text="확인 !"
            android:backgroundTint="@color/btn_super_positive"
            android:textColor="@color/black"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <EditText
            android:id="@+id/et_main_get_user_token"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="토큰 번호 입력!"
            android:fontFamily="@font/bmjua_otf"
            android:layout_marginRight="20dp"

            />
        <Button
            android:id="@+id/btn_main_get_user_token_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bmjua_otf"
            android:backgroundTint="@color/btn_super_positive"
            android:textColor="@color/black"
            android:text="체크 !"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:padding="20dp"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:fontFamily="@font/bmjua_otf"
            android:backgroundTint="@color/btn_super_negative"
            android:textColor="@color/black"
            android:text="취소 !"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:fontFamily="@font/bmjua_otf"
            android:backgroundTint="@color/btn_super_positive"
            android:textColor="@color/black"
            android:text="업로드 !"/>

    </LinearLayout>

</LinearLayout>