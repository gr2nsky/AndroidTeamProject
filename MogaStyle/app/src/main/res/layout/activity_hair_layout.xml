<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F5F6F8"
            android:orientation="horizontal"
            android:gravity="bottom">

                <ImageView
                    android:layout_width="149dp"
                    android:layout_height="99dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/jpeg_default_profile_photo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

        <TextView
            android:id="@+id/tv_hairlist_name"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/bmjua_otf"/>

        <TextView
            android:id="@+id/tv_hairlist_tel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/bmjua_otf"/>

        <TextView
            android:id="@+id/tv_hairlist_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/bmjua_otf"/>

        <TextView
            android:id="@+id/tv_hairlist_postcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/bmjua_otf"/>


        <TextView
            android:id="@+id/tv_hairlist_introduction"
            android:layout_width="0px"
            android:layout_height="0px"
            android:textColor="@color/black"
            android:fontFamily="@font/bmjua_otf"/>

        <TextView
            android:id="@+id/tv_hairlist_holiday"
            android:layout_width="0px"
            android:layout_height="0px"
            android:layout_marginBottom="20dp"
            android:textColor="@color/black"
            android:fontFamily="@font/bmjua_otf"/>

        <TextView
            android:id="@+id/img_hairlist_image"
            android:layout_width="0px"
            android:layout_height="0px"
            android:textColor="@color/black"
            android:fontFamily="@font/bmjua_otf"/>

        </LinearLayout>
        </LinearLayout>




</LinearLayout>