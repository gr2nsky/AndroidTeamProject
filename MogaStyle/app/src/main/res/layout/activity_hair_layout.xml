<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_name_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/tv_tel_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/tv_address_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/tv_postcode_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/tv_introduction_list"
        android:layout_width="0px"
        android:layout_height="0px"
        />

    <TextView
        android:id="@+id/tv_holiday_list"
        android:layout_width="0px"
        android:layout_height="0px"
        />

    <TextView
        android:id="@+id/img_image_list"
        android:layout_width="0px"
        android:layout_height="0px"
        />

</LinearLayout>