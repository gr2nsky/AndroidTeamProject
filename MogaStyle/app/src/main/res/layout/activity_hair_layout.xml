<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shop_detail_ridious"
            android:orientation="horizontal"
            android:gravity="bottom">

                <ImageView
                    android:layout_width="149dp"
                    android:layout_height="99dp"
                    android:src="@drawable/jpeg_default_profile_photo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

        <TextView
            android:id="@+id/tv_home_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_home_tel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_home_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_home_postcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_home_introduction"
            android:layout_width="0px"
            android:layout_height="0px" />

        <TextView
            android:id="@+id/tv_home_holiday"
            android:layout_width="0px"
            android:layout_height="0px"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:id="@+id/img_home_image"
            android:layout_width="0px"
            android:layout_height="0px" />

        </LinearLayout>
        </LinearLayout>




</LinearLayout>