<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Home.HomeFragment">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="예약"
            android:fontFamily="@font/bmjua_otf"
            android:textSize="40dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="40dp"
            />

        <TextView
            android:id="@+id/tv_home_login_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bmjua_otf"
            android:text="유저 님 환영합니다."
            android:textSize="36dp"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="70dp"
            android:gravity="center"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bmjua_otf"
            android:text=" 스타일을 도와드리겠습니다."
            android:textSize="36dp"
            android:layout_marginBottom="70dp"
            android:gravity="center"
            />

        <Button
            android:id="@+id/btn_home_goReservation"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="예약이 있다고요?"
            android:backgroundTint="@color/btn_super_positive"
            android:textColor="@color/black"
            android:fontFamily="@font/bmjua_otf"
            android:layout_gravity="center"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"/>


    </LinearLayout>

</FrameLayout>